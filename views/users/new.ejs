  <body>
    <div class="container">
      <h1>New User</h1>
      <form action="/users" method="POST">
        <label for="name">User Name:</label>
        <input type="text" name="username" required/>
        <label for="color">Password:</label>
        <input type="password" name="password" />
        <br>
        <input class="submission" type="submit" value="Submit">
      <form>
     <a href="/products">Back to Main Page</a>
    </div>

    <style>
      body {background-color: white}
      form{
        display: grid;
        flex-direction: column
      }
      h1   {color: #0A7359;  font-family: 'MedievalSharp', cursive; text-align: center; transform: scale(1.2)}
      h2   {color: #0A7359;  font-family: 'MedievalSharp', cursive; text-align: center}
      a   {color: #0A7359; font-family: 'Lora', serif; }
      p    {text-align: center; font-family: 'Lora', serif;}
      .submission {
         font-family: 'MedievalSharp', cursive;
         background-color: #C94627;
         color: white
      }
